# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/aurora-atelier
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/aurora-atelier?retryWrites=true&w=majority

# Email Configuration (for consultation notifications)
# Option 1: Gmail (requires App Password if 2FA enabled)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Option 2: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Option 3: Other SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password

# Notification Email (where consultation requests are sent)
NOTIFICATION_EMAIL=admin@aurora-atelier.com

# CORS Configuration
CLIENT_URL=http://localhost:3000

# JWT Secret (for future authentication features)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
